<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Pokedex </title>
    <link rel="stylesheet" href="./css/index.css" type="text/css">
</head>

<header class="cabecalho">
    <h1> <img src="https://pokedex.sleduardo.dev/img/logo.svg" alt="Pokédex"></h1>
</header>

<body>

    <div class="container-resumo">
        <h2 class="resumo">Projeto de Pokédex</h2> 
    </div>

    <main>
        <% pokedex.forEach(element => { %>
            <a href="/detalhes/<%= element.id %> "> 
                <div class="card-container"> 
                    <div class="header-card">
                        <span class="card-number"> Nº <%= element.num %>  </span>
                    </div>
                    <div class="main-card"> 
                        <img src="<%= element.img %> " alt="<%= element.name %> ">
                        <div class="card-name"> <%= element.name %>  </div>
                        <div class="data-card"> 
                            <span class="width"> <%= element.weight %>  </span>  
                            <span class="height"> <%= element.height %>  </span>
                        </div>
                    </div>
                    <div class="footer-card"> <%= element.type[0] %>  <%= element.type[1] %> </div>
                </div>
        </a>
        <% }) %>
    </main>
</body>

<footer class="rodape"> 
    <span>GITHUB: LUCASVM1</span>
    <span>CRIADO POR LUCAS VIANA</span>
</footer>
</html>
